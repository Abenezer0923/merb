# Server Configuration
PORT=8080
GIN_MODE=release
HOST=0.0.0.0

# File Upload Configuration
UPLOAD_DIR=./uploads
RESULT_DIR=./results
MAX_UPLOAD_SIZE=32

# Authentication
API_KEY=your-api-key-here
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
TOKEN_EXPIRY=24h

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Origin,Content-Type,Content-Length,Accept-Encoding,X-CSRF-Token,Authorization,X-API-Key

# Database Configuration (if you add database later)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=csv_processor
# DB_USER=postgres
# DB_PASSWORD=password
# DB_SSL_MODE=disable

# Redis Configuration (for job queue/caching if needed)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Processing Configuration
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=300s
CLEANUP_INTERVAL=1h

# File Processing
SUPPORTED_FORMATS=csv
MAX_FILE_SIZE=100MB
CHUNK_SIZE=1000

# Health Check
HEALTH_CHECK_INTERVAL=30s

# Development/Production Environment
ENVIRONMENT=development
DEBUG=true